{
  "name": "vsc-runner",
  "displayName": "vsc-runner",
  "icon": "images/logo.png",
  "description": "Execute C++, Java and Python",
  "version": "1.2.1",
  "publisher": "pablo-uribe",
  "repository": {
    "type": "git",
    "url": "https://github.com/pablo0128/Runner"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vsc-runner.helloWorld",
	  "onCommand:vsc-runner.runcode"
  ],
  "main": "./extension.js",
  "contributes": {
    "menus": {
      "editor/title": [{
        "command": "vsc-runner.runcode",
        "when": "editorFocus",
        "group": "navigation"
      }]
    },
    "commands": [
		  {
      		"command": "vsc-runner.helloWorld",
      		"title": "Hello World"
    	},
      {
        "command": "vsc-runner.runcode",
        "title": "Run Code",
        "shortTitle": "Run Code",
        "category": "tools",
        "icon":{
          "dark": "images/play_dark.svg",
          "light": "images/play_light.svg"
        }
      }
	],
  "keybindings":[
    {
      "command": "vsc-runner.runcode",
      "key": "ctrl+alt+F5"
    }
  ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.50.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
